@page
@model GerenTaref.RazorPages.Pages.Usuario.Index
@{
    Layout = "../Shared/_MainLayoutFooter.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="~/lib/css/estiloIndexUsuario.css"/>

<h1 class="display-4">Usuários Registrados</h1>

<div class="style-tabela">
    <table id="tabela" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tbody>     
            <tr>
                <td class="top center" id="id"><strong>ID</strong></td>
                <td class="top center" id="nome"><strong>Nome</strong></td>
                <td class="top center" id="email"><strong>E-mail</strong></td>
                <td class="top center" colspan="2" id="acao"><strong>Ações</strong></td>
            </tr>      
        </tbody>
        <tbody>
            @foreach (var userModel in Model.UserModel)
            {
                <tr>
                    <td>@Html.DisplayFor(model => userModel.UsuarioID)</td>
                    <td>@Html.DisplayFor(model => userModel.NomeCompleto)</td>
                    <td>@Html.DisplayFor(model => userModel.Email)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@userModel.UsuarioID" title="editar" class="editar"><span class="material-symbols-outlined">edit</span></a>
                        <a asp-page="./Delete" asp-route-id="@userModel.UsuarioID" title="deletar" class="deletar"><span class="material-symbols-outlined">delete</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="menutarefa">
    <a asp-page="../Tarefa/Index" class="editar">Menu Tarefa</a>
</div>