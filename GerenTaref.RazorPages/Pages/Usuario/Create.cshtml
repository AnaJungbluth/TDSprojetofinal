@page
@model GerenTaref.RazorPages.Pages.Usuario.Create

<h1>Criar nova Categoria</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="UserModel.UsuarioID">
            <div class="form-group">
                <label asp-for="UserModel.NomeCompleto"></label>
                <input asp-for="UserModel.NomeCompleto" class="form-control">
                <span asp-validation-for="UserModel.NomeCompleto" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email"></label>
                <input asp-for="UserModel.Email" class="form-control">
                <span asp-validation-for="UserModel.Email" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Senha"></label>
                <input asp-for="UserModel.Senha" class="form-control">
                <span asp-validation-for="UserModel.Senha" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Usuario/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>