@page "{id:int}"
@model GerenTaref.RazorPages.Pages.Usuario.Edit

<style>
    div{
        justify-content: center;
    }
    h1{
        display: flex;
        justify-content: center;
        margin-bottom: 100px;
        margin-top: 100px;
        font-size: 60px;
    }


</style>

<h1>Alterar usu√°rio</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="UserModel.UsuarioID">
            <div class="form-group">
                <label asp-for="UserModel.NomeCompleto">Nome completo</label>
                <input asp-for="UserModel.NomeCompleto" class="form-control" required>
                <span asp-validation-for="UserModel.NomeCompleto" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email"></label>
                <input asp-for="UserModel.Email" class="form-control" type="email" required>
                <span asp-validation-for="UserModel.Email" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Senha"></label>
                <input asp-for="UserModel.Senha" class="form-control" required>
                <span asp-validation-for="UserModel.Senha" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar"/>
                <a asp-page="/Usuario/Index"  class="btn btn-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>