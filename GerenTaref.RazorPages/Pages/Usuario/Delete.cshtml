@page "{id:int}"
@model GerenTaref.RazorPages.Pages.Usuario.Delete

<div>
    <h1>Detalhes do usuario a ser removido</h1>

    <p><strong>Nome Completo:</strong> @Model.UserModel.NomeCompleto</p>
    <p><strong>Email:</strong> @Model.UserModel.Email</p>
</div>

<form method="post">
    <div class="form-group">
        <input type="submit" value="Deletar" class="btn btn-danger"/>
        <a asp-page="./Usuario/Index" class="btn btn-primary">Retornar</a>
    </div>
</form>