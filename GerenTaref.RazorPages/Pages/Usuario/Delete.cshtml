@page "{id:int}"
@model GerenTaref.RazorPages.Pages.Usuario.Delete

@{
    Layout = "../Shared/_MainLayoutFooter.cshtml";
}

<div class="espaco"></div>
<div class="box-login">
    <h1 class="title_login"> Detalhes do usuário a ser removido</h1>
    <form method="post" class="form login">
        <div class="form_field">
            <label><span class="material-icons">person</span></label>
            <input value="@Model.UserModel.NomeCompleto" type="text" class="form_input"  readonly>    
        </div>

        <div class="form_field">
            <label><span class="material-icons">email</span></label>
            <input value="@Model.UserModel.Email" type="email" class="form_input" readonly>    
        </div>

        <div class="form_field">
            <input type="submit" value="Deletar" id="salvar"/>
            <a asp-page="/Usuario/Index" id="cancelar">Cancelar</a>
        </div>
    </form>
    <p class="resgatar-senha">Deletando usuário</p>
</div>
