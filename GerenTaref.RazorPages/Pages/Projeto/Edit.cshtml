@page "{id:int}"
@model GerenTaref.RazorPages.Pages.Projeto.Edit

<style>
    div{
        justify-content: center;
    }
    h1{
        display: flex;
        justify-content: center;
        margin-bottom: 100px;
        margin-top: 100px;
        font-size: 60px;
    }


</style>

<h1>Alterar Projeto</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="ProjetoModel.ProjetoID">
            <div class="form-group">
                <label asp-for="ProjetoModel.Nome">Nome do projeto</label>
                <input asp-for="ProjetoModel.Nome" class="form-control" required>
                <span asp-validation-for="ProjetoModel.Nome" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoModel.Descricao"></label>
                <input asp-for="ProjetoModel.Descricao" class="form-control" required>
                <span asp-validation-for="ProjetoModel.Descricao" class="text-dange"></span>
            </div>
             <div class="form-group">
                <label asp-for="IdUser">Respons√°vel</label>
                <select asp-for="IdUser" type="number" class="form-control">
                    @foreach (var userModel in Model.UserModel!)
                    {  
                        @if(@Model.IdUser == @userModel.UsuarioID) {
                            <option value="@userModel.UsuarioID" selected>@userModel.NomeCompleto</option>
                        } else {    
                            <option value="@userModel.UsuarioID">@userModel.NomeCompleto</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdUser" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar"/>
                <a asp-page="/Projeto/Index" class="btn btn-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>