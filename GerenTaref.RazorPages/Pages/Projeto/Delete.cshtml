@page "{id:int}"
@model GerenTaref.RazorPages.Pages.Projeto.Delete

<div>
    <h1>Detalhes do projeto a ser removido</h1>

    <p><strong>Nome:</strong> @Model.ProjetoModel.Nome</p>
    <p><strong>Email:</strong> @Model.ProjetoModel.Descricao</p>
    <p><strong>Email:</strong> @Model.ProjetoModel.Responsavel</p>

</div>

<form method="post">
    <div class="form-group">
        <input type="submit" value="Deletar" class="btn btn-danger"/>
        <a asp-page="./Projeto/Index" class="btn btn-primary">Retornar</a>
    </div>
</form>