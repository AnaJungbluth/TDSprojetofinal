<!DOCTYPE html>
<html>
    <head>
        <TItle>TaskAgenda</TItle>
        <script src="https://kit.fontawesome.com/2694ebafce.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/lib/css/estilo.css"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
        <link rel="stylesheet" href="~/lib/css/estiloUsuario.css"/>
    </head>

    <body>
        <main>
            @RenderBody()
        </main>

        <footer>
            <partial name="./_MainFooter.cshtml">
        </footer>
        <script>

            // obtém a URL atual
            const currentUrl = window.location.href;

            // seleciona todos os links da barra de navegação
            const navLinks = document.querySelectorAll('.nav-link');

            // percorre todos os links da barra de navegação
            navLinks.forEach(link => {
            // obtém a URL do link
            const linkUrl = link.href;

            // verifica se a URL do link é a mesma que a URL atual
            if (currentUrl === linkUrl) {
                // adiciona a classe 'active' ao link correspondente
                link.classList.add('active');
            }
            });
        </script> 
        
        @RenderSection("scripts", required:false)
    </body>

</html>