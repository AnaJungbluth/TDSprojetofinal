<!DOCTYPE html>
<html>
    <head>
        <TItle>TaskAgenda</TItle>
        <script src="https://kit.fontawesome.com/2694ebafce.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/lib/css/estiloIndexMenuTarefa.css"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="~/lib/css/estiloTabelaMenuTarefa.css"/>
    </head>
    <body>
        <header>
            <partial name="./_MainMenuTarefas.cshtml">
        </header>
        
        <div class="style-tabela">
            <table id="tabela" border="0" cellpadding="0" cellspacing="0" width="81.46%">
                <tbody>     
                    <tr>
                        <td class="top center" id="status"><strong>Status</strong></td>
                        <td class="top center" id="nome"><strong>Nome</strong></td>
                        <td class="top center" id="nota"><strong>Descrição</strong></td>
                        <td class="top center" id="resp"><strong>Responsável</strong></td>
                        <td class="top center" id="data"><strong>Data Final</strong></td>
                        <td class="top center" colspan="2" id="acao"><strong>Ações</strong></td>
                    </tr>      
                </tbody>
                <tbody>
                    <main>
                        @RenderBody()
                    </main>
                </tbody>
            </table>
        </div>
        
        <script>

            // obtém a URL atual
            const currentUrl = window.location.href;

            // seleciona todos os links da barra de navegação
            const navLinks = document.querySelectorAll('.nav-link');

            // percorre todos os links da barra de navegação
            navLinks.forEach(link => {
            // obtém a URL do link
            const linkUrl = link.href;

            // verifica se a URL do link é a mesma que a URL atual
            if (currentUrl === linkUrl) {
                // adiciona a classe 'active' ao link correspondente
                link.classList.add('active');
            }
            });
        </script> 
        @RenderSection("scripts", required:false)
    </body>

</html>